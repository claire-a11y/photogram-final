<!DOCTYPE html>
<html>
  <head>
    <title>Photogram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <% if logged_in? %>
            <li><%= link_to "All users", users_path %></li>
            <li><%= link_to "All public photos", photos_path %></li>
            <li><%= link_to current_user.username, user_path(current_user.username) %></li>
            <li><%= link_to "Sign out", sign_out_path, method: :delete, data: { confirm: "Are you sure you want to sign out?" } %></li>
          <% else %>
            <li><%= link_to "All users", users_path %></li>
            <li><%= link_to "All public photos", photos_path %></li>
            <li><%= link_to "Sign in", login_path %></li>
            <li><%= link_to "Sign up", sign_up_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
